<?xml version="1.0" encoding="UTF-8"?>

<!-- AddProductScene.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<VBox alignment="center" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.AddProductSceneController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Enter product details:" />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 16px;" text="Name:" />
        <TextField fx:id="nameField" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 16px;" text="Description:" />
        <TextField fx:id="descriptionField" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 16px;" text="Price:" />
        <TextField fx:id="priceField" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 16px;" text="Image:" />
        <Button fx:id="chooseImageButton" onAction="#chooseImage" style="-fx-font-size: 16px; -fx-background-color: #004bff; -fx-text-fill: white;" text="Choose Image" />
    </HBox>
    <Label fx:id="messageLabel" style="-fx-font-size: 16px; -fx-text-fill: #000000;" />
    <HBox spacing="10">
        <Button fx:id="goBackButton" onAction="#goBack" style="-fx-background-color: #b53f3f; -fx-text-fill: white;" text="Go Back" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="addProductButton" onAction="#addProduct" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Product" />
    </HBox>
</VBox>