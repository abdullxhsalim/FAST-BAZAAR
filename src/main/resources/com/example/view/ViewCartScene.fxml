<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ViewCartSceneController">
    <HBox alignment="CENTER">
        <Label fx:id="messageLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10 0 20 10;" text="Your Cart">
        </Label>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>
    <ListView fx:id="cartListView" prefHeight="300.0" prefWidth="500.0" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="goBackButton" style="-fx-background-color: #3F51B5; -fx-text-fill: white;" text="Go Back" onAction="#goBack" />
        <Button fx:id="checkoutButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Checkout" onAction="#checkout" />
        <Button fx:id="removeButton" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Remove Product" onAction="#removeProduct" />
        <Button fx:id="emptyCartButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Empty Cart" onAction="#emptyCart" />
    </HBox>
</VBox>