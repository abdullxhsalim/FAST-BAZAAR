<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.BrowseProductsSceneController">
    <HBox alignment="CENTER">
        <Label fx:id="messageLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10 0 20 10;" text="Showing all products">
         <font>
            <Font name="HelveticaRounded-Bold" size="12.0" />
         </font></Label>
        <Region HBox.hgrow="ALWAYS" />
        <Region minWidth="20" />
        <TextField fx:id="searchBox" promptText="Search..." HBox.hgrow="ALWAYS" />
    </HBox>
    <VBox fx:id="productsContainer" spacing="10">
    </VBox>
    <HBox alignment="BOTTOM_LEFT" style="-fx-padding: 10 0 0 0;" VBox.vgrow="ALWAYS">
        <Button fx:id="goBackButton" style="-fx-background-color: #fc0000; -fx-text-fill: white;" text="Go Back" />
    </HBox>
</VBox>
